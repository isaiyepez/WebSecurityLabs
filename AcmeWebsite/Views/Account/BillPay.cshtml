
@{
    ViewData["Title"] = "BillPay";
}

<h2>Bill Pay</h2>

<div class="container-fluid">
    <form action="DoBillPay">
        <div class="row">
            <div class="form-group col-lg-3">
                <label for="fromAcct">Bill Pay Account:</label>
                <select name="fromAcct" class="form-control">
                    @foreach (AcmeLib.Account acct in ViewBag.Accts)
                    {
                        <option value="@acct.Id">@acct.AccountName</option>
                    }

                </select>
            </div>
            <div class="form-group col-lg-3">
                <label for="payee">Pay To:</label>
                <input type="text" name="payee" class="form-control" placeholder="Payee" />
            </div>
            <div class="form-group col-lg-3">
                <label for="amt">Amount:</label>
                <input type="text" name="amt" class="form-control" placeholder="amount" />
            </div>
        </div>
        <div class="form-group row">
            <button class="btn btn-primary" type="submit">Pay Bill</button>
        </div>
    </form>


</div>