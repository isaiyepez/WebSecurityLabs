@model AcmeWebsite.Models.XXEModel
@{
    ViewData["Title"] = "XXE Demo";
}

<div class="row">
    @if (Model.ElapsedTime > 0)
    {
        <p>Processed XML in @Model.ElapsedTime milliseconds </p>
    }
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data" asp-controller="XXE" asp-action="UploadXml">
        <div class="form-group">
            <div class="col-md-10">
                <label asp-for="ParseDtd">Parse DTD?</label>
                <input asp-for="ParseDtd" /> <br />
                <label asp-for="MaxChars">Maximum Characters from entities:</label>
                <input asp-for="MaxChars" />
                <p>Upload xml file:</p>
                <input asp-for="File">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload">
            </div>
        </div>
    </form>


</div>
