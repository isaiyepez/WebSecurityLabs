@model IEnumerable<AcmeLib.Account>
@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <nav class="navbar-nav">
        <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li class="nav-item"> <a class="nav-link" href="~/account/profile">Account Profile</a></li>
                <li class="nav-item"> <a class="nav-link" href="~/account/transfer">Transfer Funds</a></li>
                <li class="nav-item"> <a class="nav-link" href="~/account/billpay">Pay Bills</a></li>
                <li class="nav-item"><a class="nav-link" href="~/account/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
</div>
<div class="row">
    <h2>Welcome</h2>
    <hr />
</div>
<div class="row">
    

    <div class="col-md-2">
        @Html.Raw(ViewBag.User.Firstname) &nbsp; @Html.Raw(ViewBag.User.Lastname) <br />
        @Html.Raw(ViewBag.User.Email) &nbsp; @Html.Raw(ViewBag.User.Phone)
    </div>
</div>
<div class="row">
    <h2>Accounts</h2> <hr />
    <table class="table table-striped">
        @foreach (var acct in Model)
        {
            <tr>
                <td>@acct.Id</td>
                <td><a href="AccountDetail?acctId=@acct.Id">@acct.AccountName </a></td>
            </tr>
        }
    </table>

</div>
